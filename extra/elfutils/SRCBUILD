# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/elfutils.html

version=0.176
description="Libraries and utilities to handle ELF object files and DWARF debugging information"
depends=('gcc' 'zlib' 'bzip2' 'xz')
sources=("https://sourceware.org/elfutils/ftp/$version/elfutils-$version.tar.bz2"
        "https://sourceware.org/elfutils/ftp/$version/elfutils-$version.tar.bz2.sig"
        'elfutils-0.176-portability-fixes.patch')
pgpkeys=('8370665B57816A6A')

src_prepare() {
    cd "$srcdir/elfutils-$pkgver"

    patch -Np1 -i ../elfutils-0.176-portability-fixes.patch
    autoreconf -fi

    # https://sourceware.org/PR23914
    sed -i 's|-Werror||' */Makefile.in
}

src_compile() {
    cd "$SOURCE_DIR/elfutils-$version"

    # clang is a no go
    export CC=gcc CXX=g++

    ./configure --prefix=/usr \
        --program-prefix="eu-" \
        --disable-nls \
        --disable-symbol-versioning \
        --disable-textrelcheck
    make
}

src_check() {
    cd "$SOURCE_DIR/elfutils-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/elfutils-$version"
    make DESTDIR="$INSTALL_DIR" install
}
