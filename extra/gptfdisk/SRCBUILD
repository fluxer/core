version=1.0.0
description="A text-mode partitioning tool that works on GUID Partition Table (GPT) disks"
depends=('gcc' 'popt' 'util-linux' 'ncurses')
sources=("http://downloads.sf.net/gptfdisk/gptfdisk-$version.tar.gz")

src_compile() {
  cd "$SOURCE_DIR/gptfdisk-$version"
  make
}

src_install() {
  cd "$SOURCE_DIR/gptfdisk-$version"

  install -vd "$INSTALL_DIR"/usr/{bin,share/{doc/gdisk,man/man8}}
  install -vt "$INSTALL_DIR/usr/bin" {,c,s}gdisk fixparts
  install -vm644 -t "$INSTALL_DIR/usr/share/man/man8" {{,c,s}gdisk,fixparts}.8
}

