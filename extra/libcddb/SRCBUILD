version=1.3.2
description="Library that implements the different protocols (CDDBP, HTTP, SMTP) to access data on a CDDB server (e.g. http://freedb.org)."
depends=('glibc')
sources=("http://downloads.sf.net/libcddb/libcddb-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libcddb-$version"
    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/libcddb-$version"
    make DESTDIR="$INSTALL_DIR" install
}
