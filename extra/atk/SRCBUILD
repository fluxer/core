# TODO: introspection
# http://www.linuxfromscratch.org/blfs/view/svn/x/atk.html

version=2.35.1
description="A library providing a set of interfaces for accessibility"
depends=('glib')
makedepends=('python' 'meson')
sources=("http://ftp.gnome.org/pub/gnome/sources/atk/2.35/atk-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/atk-$version"

    meson ../build --buildtype plain \
        --prefix /usr \
        -Dintrospection=false
    ninja -C ../build
}

src_install() {
    cd "$SOURCE_DIR/atk-$version"
    DESTDIR="$INSTALL_DIR" ninja -C ../build install
}
