# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=20190502
description="Is a software library that talks the protocols to support iPhone and iPod Touch devices on Linux"
depends=('libusbmuxd' 'gnutls' 'libgcrypt')
makedepends=('git')
sources=("https://github.com/libimobiledevice/libimobiledevice.git")

src_prepare() {
    cd "$SOURCE_DIR/libimobiledevice.git"

    NOCONFIGURE=1 ./autogen.sh
}

src_compile() {
    cd "$SOURCE_DIR/libimobiledevice.git"

    ./configure --prefix=/usr \
        --disable-static \
        --without-cython
    make
}

src_install() {
    cd "$SOURCE_DIR/libimobiledevice.git"
    make DESTDIR="$INSTALL_DIR" install
}
