# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=3.3
description="A free, open source, portable framework for graphical application development"
depends=('xorg-libraries' 'mesalib')
makedepends=('cmake' 'xorg-protocol-headers')
sources=("https://github.com/glfw/glfw/archive/$version.tar.gz")
options=('!mirror')

src_compile() {
    mkdir -p "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    cmake ../glfw-$version \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_SHARED_LIBS=ON
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
