# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/libvorbis.html

version=1.3.6
description="General purpose audio and music encoding format contemporary to MPEG-4 AAC and TwinVQ"
depends=('libogg')
sources=("http://downloads.xiph.org/releases/vorbis/libvorbis-$version.tar.xz")

src_prepare() {
    cd "$SOURCE_DIR/libvorbis-$version"
}

src_compile() {
    cd "$SOURCE_DIR/libvorbis-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/libvorbis-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libvorbis-$version"
    make DESTDIR="$INSTALL_DIR" install
}
