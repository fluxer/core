# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/libvpx.html

version=1.4.0
description="The VP8 Codec SDK"
depends=('glibc')
makedepends=('yasm')
sources=("http://storage.googleapis.com/downloads.webmproject.org/releases/webm/libvpx-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libvpx-$version"

    sed -i 's/cp -p/cp/' build/make/Makefile
    chmod -v 644 vpx/*.h

    ./configure --prefix=/usr \
        --enable-vp8 \
        --enable-runtime-cpu-detect \
        --enable-shared \
        --enable-postproc \
        --enable-pic \
        --disable-install-docs \
        --disable-install-srcs \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libvpx-$version"
    make DIST_DIR="$INSTALL_DIR/usr" install
}
