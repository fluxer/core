# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/yasm.html

version=1.3.0
description="A rewrite of NASM to allow for multiple syntax supported (NASM, TASM, GAS, etc.)"
depends=('glibc')
sources=("http://www.tortall.net/projects/yasm/releases/yasm-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/yasm-$version"

    ./configure --prefix=/usr \
        --disable-rpath \
        --disable-nls
    make
}

src_check() {
    cd "$SOURCE_DIR/yasm-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/yasm-$version"
    make DESTDIR="$INSTALL_DIR" install
}
