# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=2.0.5
description='Just-in-time compiler and drop-in replacement for Lua 5.1'
depends=('gcc')
sources=("https://luajit.org/download/LuaJIT-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/LuaJIT-$version"
    make amalg PREFIX=/usr
}

src_install() {
    cd "$SOURCE_DIR/LuaJIT-$version"
    make install DESTDIR="$INSTALL_DIR" PREFIX=/usr
}
