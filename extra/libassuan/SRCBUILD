# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/libassuan.html

version=2.5.3
description="A IPC library used by some GnuPG related software"
depends=('libgpg-error')
sources=("ftp://ftp.gnupg.org/gcrypt/libassuan/libassuan-$version.tar.bz2"
        "ftp://ftp.gnupg.org/gcrypt/libassuan/libassuan-$version.tar.bz2.sig")
pgpkeys=('D8692123C4065DEA5E0F3AB5249B39D24F25E3B6')

src_compile() {
    cd "$SOURCE_DIR/libassuan-$version"
    ./configure --prefix=/usr
    make
}

src_check() {
    cd "$SOURCE_DIR/libassuan-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libassuan-$version"
    make DESTDIR="$INSTALL_DIR" install
}
