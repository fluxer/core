# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/qpdf.html

version=5.1.3
description="QPDF: A Content-Preserving PDF Transformation System"
depends=('pcre' 'perl')
sources=("http://downloads.sf.net/qpdf/qpdf-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/qpdf-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/qpdf-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/qpdf-$version"
    make DESTDIR="$INSTALL_DIR" install
}
