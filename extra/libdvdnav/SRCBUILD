# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=6.0.0
description="The library for xine-dvdnav plugin"
depends=('libdvdread')
sources=("ftp://ftp.videolan.org/pub/videolan/libdvdnav/$version/libdvdnav-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libdvdnav-$version"

    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/libdvdnav-$version"
    make DESTDIR="$INSTALL_DIR" install
}
