# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=5.7.5
description="RAR uncompressor"
makedepends=('gcc')
sources=("http://www.rarlab.com/rar/unrarsrc-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/unrar"

    make CXXFLAGS="-fPIC ${CXXFLAGS}" STRIP="true"
}

src_install() {
    cd "$SOURCE_DIR/unrar"
    make DESTDIR="$INSTALL_DIR" install
}

