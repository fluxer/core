# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/librsvg.html

version=2.40.16
description="Library to render SVG files using cairo"
depends=('gdk-pixbuf' 'pango' 'libcroco')
makedepends=('intltool' 'xorg-protocol-headers')
sources=("http://ftp.gnome.org/pub/gnome/sources/librsvg/2.40/librsvg-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/librsvg-$version"

    ./configure --prefix=/usr \
        --disable-static \
        --disable-introspection
    make
}

src_check() {
    cd "$SOURCE_DIR/librsvg-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/librsvg-$version"
    make DESTDIR="$INSTALL_DIR" install
}
