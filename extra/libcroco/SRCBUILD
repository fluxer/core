# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/libcroco.html

version=0.6.13
description="General CSS parsing and manipulation library written in C"
depends=('glib' 'libxml2')
makedepends=('intltool')
sources=("http://ftp.gnome.org/pub/gnome/sources/libcroco/0.6/libcroco-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/libcroco-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/libcroco-$version"
    LD_LIBRARY_PATH=$(pwd)/src/.libs make test
}

src_install() {
    cd "$SOURCE_DIR/libcroco-$version"
    make DESTDIR="$INSTALL_DIR" install
}
