# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/libarchive.html

version=3.2.2
description="Multi-format archive and compression library"
makedepends=('zlib' 'bzip2' 'xz' 'glibc' 'acl' 'attr')
sources=("http://www.libarchive.org/downloads/libarchive-$version.tar.gz")

src_prepare() {
    cd "$SOURCE_DIR/libarchive-$version"
    autoreconf -fi
}

src_compile() {
    cd "$SOURCE_DIR/libarchive-$version"

    ./configure --prefix=/usr \
        --without-nettle \
        --disable-rpath \
        --with-openssl \
        --with-expat \
        --enable-acl \
        --enable-xattr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/libarchive-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libarchive-$version"
    make DESTDIR="$INSTALL_DIR" install
}
