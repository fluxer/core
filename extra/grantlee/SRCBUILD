# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/grantlee.html

version=0.5.1
description="A string template engine based on the Django template system and written in Qt"
makedepends=('katie' 'cmake' 'git')
sources=("http://github.com/fluxer/grantlee.git")

src_compile() {
    mkdir "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    cmake ../grantlee.git \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DBUILD_TESTS=OFF
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}