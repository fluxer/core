# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/x7driver.html#libevdev

version=1.4.6
description="Wrapper library for evdev devices"
depends=('musl')
makedepends=('python')
checkdepends=('check' 'valgrind')
sources=("http://freedesktop.org/software/libevdev/libevdev-$version.tar.xz"
        "http://freedesktop.org/software/libevdev/libevdev-$version.tar.xz.sig")
pgpkeys=('E23B7E70B467F0BF')

src_compile() {
    cd "$SOURCE_DIR/libevdev-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}
src_check() {
    cd "$SOURCE_DIR/libevdev-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libevdev-$version"
    make DESTDIR="$INSTALL_DIR" install
}
