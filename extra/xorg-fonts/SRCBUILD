_packages=(font-util encodings font-adobe-75dpi font-adobe-utopia-75dpi font-adobe-utopia-type1 \
        font-alias font-arabic-misc font-bh-75dpi font-bh-lucidatypewriter-75dpi font-bh-ttf \
        font-bh-type1 font-bitstream-75dpi font-bitstream-type1 font-cronyx-cyrillic font-cursor-misc \
        font-daewoo-misc font-dec-misc font-ibm-type1 font-isas-misc font-jis-misc font-micro-misc \
        font-misc-cyrillic font-misc-ethiopic font-misc-meltho font-misc-misc font-mutt-misc \
        font-schumacher-misc font-screen-cyrillic font-sony-misc font-sun-misc font-winitzki-cyrillic \
        font-xfree86-type1)
src_compile() {
    for _pkg in "${_packages[@]}";do
        cd "$SOURCE_DIR/$_pkg-"*
        echo "Configuring $_pkg..."
        ./configure --prefix=/usr \
                    --sysconfdir=/etc \
                    --localstatedir=/var \
                    --disable-static

        echo "Compiling $_pkg..."
        make

        # bootstrapping requires local installation
        if [ ! -d "/var/local/spm/xorg-fonts" ];then
            echo "Installing $_pkg (local)..."
            make install
            ldconfig
        fi
    done
}

src_install() {
    for _pkg in "${_packages[@]}";do
        cd "$SOURCE_DIR/$_pkg-"*
        echo "Installing $_pkg files..."
        make DESTDIR="$INSTALL_DIR" install
    done
    
    install -vdm755 "$INSTALL_DIR/usr/share/fonts"
    ln -svfn X11/OTF "$INSTALL_DIR/usr/share/fonts/X11-OTF"
    ln -svfn X11/TTF "$INSTALL_DIR/usr/share/fonts/X11-TTF"
    
    # those will conflict so will be made in post_install()
    rm -vf "$INSTALL_DIR/usr/share/fonts/X11/"*/fonts.*
}

post_install() {
    echo " >> Updating font cache. This may take a while..."
    fc-cache --force
  
    echo " >> Creating fonts directories..."
    mkfontscale /usr/share/fonts/X11/75dpi
    mkfontdir /usr/share/fonts/X11/75dpi
    mkfontscale /usr/share/fonts/X11/Type1
    mkfontdir /usr/share/fonts/X11/Type1
    mkfontscale /usr/share/fonts/X11/cyrillic
    mkfontdir /usr/share/fonts/X11/cyrillic
    mkfontscale /usr/share/fonts/X11/misc
    mkfontdir /usr/share/fonts/X11/misc
}

post_upgrade() {
    post_install
}

post_remove() {
    echo " >> Updating font cache. This may take a while..."
    fc-cache --force
}
