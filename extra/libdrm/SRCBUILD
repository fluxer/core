# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/libdrm.html

version=2.4.103
description="Userspace library for accessing the DRM"
depends=('glibc' 'xorg-libraries')
makedepends=('meson')
optdepends=('valgrind')
sources=("http://dri.freedesktop.org/libdrm/libdrm-$version.tar.xz"
        "http://dri.freedesktop.org/libdrm/libdrm-$version.tar.xz.sig")
pgpkeys=('8703B6700E7EE06D7A39B8D6EDAE37B02CEB490D')

src_compile() {
    cd "$SOURCE_DIR/libdrm-$version"

    meson ../build --buildtype plain \
        --prefix /usr
    ninja -C ../build
}

src_install() {
    cd "$SOURCE_DIR/libdrm-$version"
    DESTDIR="$INSTALL_DIR" ninja -C ../build install
}
