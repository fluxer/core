# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/exiv2.html

version=0.27.3
description="Exif and Iptc metadata manipulation library and tools"
depends=('gcc' 'zlib' 'expat')
makedepends=('cmake')
sources=("https://www.exiv2.org/builds/exiv2-$version-Source.tar.gz")

src_compile() {
    mkdir "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    cmake ../exiv2-$version-Source \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DEXIV2_ENABLE_NLS=ON \
        -DEXIV2_BUILD_SAMPLES=OFF
    make
}

#src_check() {
#    cd build
#    make tests # not finding tests dir
#}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
