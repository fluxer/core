# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/exiv2.html

version=0.25
description="Exif and Iptc metadata manipulation library and tools"
depends=('gcc' 'zlib' 'expat')
makedepends=('cmake')
sources=("http://www.exiv2.org/exiv2-$version.tar.gz")

src_compile() {
    mkdir "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    sed -i "s:man/man1:share/man/man1:" ../exiv2-$version/src/CMakeLists.txt
    cmake ../exiv2-$version \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DEXIV2_ENABLE_BUILD_PO:BOOL=ON \
        -DEXIV2_ENABLE_BUILD_SAMPLES=OFF
    make
}

#src_check() {
#    cd build
#    make tests # not finding tests dir
#}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
