# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.0.5
description="A Free Implementation of the Unicode Bidirectional Algorithm"
depends=('glibc')
sources=("https://github.com/fribidi/fribidi/releases/download/v$version/fribidi-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/fribidi-$version"

    # format-security 
    unset CPPFLAGS

    ./configure --prefix=/usr \
        --enable-malloc
    make
}

src_install() {
    cd "$SOURCE_DIR/fribidi-$version"
    make DESTDIR="$INSTALL_DIR" install
}
