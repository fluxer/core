# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=0.19.6
description="A Free Implementation of the Unicode Bidirectional Algorithm"
depends=('glibc')
sources=("http://fribidi.org/download/fribidi-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/fribidi-$version"

    # format-security 
    unset CPPFLAGS

    ./configure --prefix=/usr \
        --enable-malloc
    make
}

src_install() {
    cd "$SOURCE_DIR/fribidi-$version"
    make DESTDIR="$INSTALL_DIR" install
}
