# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.16
description="Command-line option parser"
depends=('glibc')
sources=("http://rpm5.org/files/popt/popt-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/popt-$version"

    ./configure --prefix=/usr \
        --disable-static \
        --disable-nls
    make
}

src_install() {
    cd "$SOURCE_DIR/popt-$version"
    make DESTDIR="$INSTALL_DIR" install
}
