# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=20190420
description='Small build system with a focus on speed'
depends=('gcc' 'musl')
sources=('git://github.com/martine/ninja.git')
makedepends=('git')

src_compile() {
    cd "$SOURCE_DIR/ninja.git"

    python ./configure.py --bootstrap
}

src_install() {
    cd "$SOURCE_DIR/ninja.git"
    install -vDm755 ninja "$INSTALL_DIR/usr/bin/ninja"
}
