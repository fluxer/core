# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/shared-mime-info.html

version=1.3
description="Freedesktop.org shared MIME info"
depends=('libxml2' 'glib')
makedepends=('intltool' 'perl-xml-parser')
sources=("http://freedesktop.org/~hadess/shared-mime-info-$version.tar.xz")


src_compile() {
    cd "$SOURCE_DIR/shared-mime-info-$version"

    # TODO: NLS can not be disabled (--disable-nls is not respected)
    ./configure --prefix=/usr \
        --disable-update-mimedb
    make -j1
}

src_check() {
    cd "$SOURCE_DIR/shared-mime-info-$version"
    make -j1 check
}

src_install() {
    cd "$SOURCE_DIR/shared-mime-info-$version"
    make -j1 DESTDIR="$INSTALL_DIR" install
}


post_remove() {
    rm -vf usr/share/mime/{globs,globs2,icons,treemagic,generic-icons,types,magic,XMLnamespaces,subclasses,aliases,mime.cache}
    rm -vrf usr/share/mime/{application,audio,image,inode,message,model,multipart,text,video,x-content,x-epoc}
    rmdir --ignore-fail-on-non-empty usr/share/mime
}
