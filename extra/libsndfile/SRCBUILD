# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/libsndfile.html

version=1.0.27
description="A C library for reading and writing files containing sampled sound"
depends=('alsa-lib' 'flac' 'libvorbis')
checkdepends=('python')
sources=("http://www.mega-nerd.com/libsndfile/files/libsndfile-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/libsndfile-$version"
    ./configure --prefix=/usr \
        --disable-sqlite \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/libsndfile-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libsndfile-$version"
    make DESTDIR="$INSTALL_DIR" install
}
