# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.0.14
description="Hyperfast and lightweight templating for Python"
depends=('python-markupsafe' 'python-beaker')
sources=("https://pypi.python.org/packages/source/M/Mako/Mako-$version.tar.gz"
        "https://pypi.python.org/packages/source/M/Mako/Mako-$version.tar.gz.asc")
pgpkeys=('330239C1C4DAFEE1')

src_compile() {
    cd "$SOURCE_DIR/Mako-$version"
    python setup.py build
}

src_check() {
    cd "$SOURCE_DIR/Mako-$version"
    python setup.py test
}

src_install() {
    cd "$SOURCE_DIR/Mako-$version"
    python setup.py install --prefix='/usr' --root="$INSTALL_DIR"
}
