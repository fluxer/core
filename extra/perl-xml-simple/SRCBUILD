# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=2.22
description="Simple XML parser"
depends=('perl-xml-parser' 'perl')
sources=("http://search.cpan.org/CPAN/authors/id/G/GR/GRANTM/XML-Simple-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/XML-Simple-$version"

    perl Makefile.PL INSTALLDIRS=vendor
    make
}

src_check() {
    cd "$SOURCE_DIR/XML-Simple-$version"
    make test
}

src_install() {
    cd "$SOURCE_DIR/XML-Simple-$version"
    make DESTDIR="$INSTALL_DIR" install
}
