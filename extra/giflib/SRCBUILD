# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/giflib.html

version=5.1.9
description="Library for reading and writing GIF images"
makedepends=('xmlto' 'docbook-xml' 'docbook-xsl')
sources=("http://dl.sourceforge.net/giflib/giflib-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/giflib-$version"

    make
}

src_check() {
    cd "$SOURCE_DIR/giflib-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/giflib-$version"
    make DESTDIR="$INSTALL_DIR" PREFIX=/usr install
}
