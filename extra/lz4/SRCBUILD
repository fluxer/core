version=1.8.3
description='Very fast lossless compression algorithm'
makedepends=('git')
checkdepends=('diffutils')
depends=('musl')
sources=("https://github.com/lz4/lz4/archive/v$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/lz4-$version"
    make PREFIX=/usr
}

src_install() {
    cd "$SOURCE_DIR/lz4-$version"
    make install PREFIX=/usr DESTDIR="$INSTALL_DIR"
}
