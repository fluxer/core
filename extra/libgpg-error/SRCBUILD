# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.20
description="Small library that defines common error values for all GnuPG components"
depends=('glibc' 'bash')
sources=("ftp://ftp.gnupg.org/gcrypt/libgpg-error/libgpg-error-$version.tar.bz2"
        "ftp://ftp.gnupg.org/gcrypt/libgpg-error/libgpg-error-$version.tar.bz2.sig")
pgpkeys=('249B39D24F25E3B6')

src_compile() {
    cd "$SOURCE_DIR/libgpg-error-$version"

    ./configure --prefix=/usr
    make
}

src_check() {
    cd "$SOURCE_DIR/libgpg-error-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libgpg-error-$version"
    make DESTDIR="$INSTALL_DIR" install
}
