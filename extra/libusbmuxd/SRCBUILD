# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=20190502
description="USB Multiplex Daemon"
depends=('libusbx' 'libplist')
sources=("https://github.com/libimobiledevice/libusbmuxd.git")

src_prepare() {
    cd "$SOURCE_DIR/libusbmuxd.git"

    NOCONFIGURE=1 ./autogen.sh
}

src_compile() {
    cd "$SOURCE_DIR/libusbmuxd.git"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libusbmuxd.git"
    make DESTDIR="$INSTALL_DIR" install
}
