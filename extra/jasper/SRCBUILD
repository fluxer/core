# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/jasper.html

version=2.0.23
description="A software-based implementation of the codec specified in the emerging JPEG-2000 Part-1 standard"
depends=('libjpeg-turbo')
makedepends=('freeglut' 'xorg-libraries' 'glu' 'cmake')
sources=("https://github.com/jasper-software/jasper/archive/version-$version.tar.gz")
options=('!mirror')

src_compile() {
    cd "$SOURCE_DIR/jasper-version-$version"

    mkdir -p build && cd build
    cmake ../ -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_SKIP_INSTALL_RPATH=YES \
        -DJAS_ENABLE_DOC=NO
    make
}

src_install() {
    cd "$SOURCE_DIR/jasper-version-$version/build"
    make DESTDIR="$INSTALL_DIR" install
}
