# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=0.23
description="Implements a XML/HTML/XHTML Markup safe string for Python"
depends=('python')
sources=("http://pypi.python.org/packages/source/M/MarkupSafe/MarkupSafe-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/MarkupSafe-$version"
    python setup.py build
}

src_check() {
    cd "$SOURCE_DIR/MarkupSafe-$version"
    python setup.py test
}

src_install() {
    cd "$SOURCE_DIR/MarkupSafe-$version"
    python setup.py install --prefix='/usr' --root="$INSTALL_DIR"
}
