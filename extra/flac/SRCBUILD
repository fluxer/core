# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/flac.html

version=1.3.1
description="Free Lossless Audio Codec"
depends=('libogg')
makedepends=('nasm')
sources=("http://downloads.xiph.org/releases/flac/flac-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/flac-$version"

    ./configure --prefix=/usr \
        --mandir=/usr/share/man \
        --enable-shared \
        --disable-rpath \
        --disable-examples
    make -j1
}

src_check() {
    cd "$SOURCE_DIR/flac-$version"
    make -j1 check
}

src_install() {
    cd "$SOURCE_DIR/flac-$version"
    make -j1 DESTDIR="$INSTALL_DIR" install
}
