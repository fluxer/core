# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.3.0
description="Portable abstraction library for DVD decryption"
depends=('glibc')
sources=("http://download.videolan.org/pub/libdvdcss/$version/libdvdcss-$version.tar.bz2"
        "http://download.videolan.org/pub/libdvdcss/$version/libdvdcss-$version.tar.bz2.asc")
pgpkeys=('7180713BE58D1ADC')

src_compile() {
    cd "$SOURCE_DIR/libdvdcss-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libdvdcss-$version"
    make DESTDIR="$INSTALL_DIR" install
}
