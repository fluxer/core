# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=0.8
description="Freedesktop sound theme"
makedepends=('intltool')
sources=("http://people.freedesktop.org/~mccann/dist/sound-theme-freedesktop-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/sound-theme-freedesktop-$version"

    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/sound-theme-freedesktop-$version"
    make DESTDIR="$INSTALL_DIR" install
}
