# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/server/sqlite.html

_amalgamationver=3300100
version=3.30.1
description="C library that implements an SQL database engine"
makedepends=('readline')
sources=("http://www.sqlite.org/2018/sqlite-autoconf-$_amalgamationver.tar.gz")

src_compile() {
    export CPPFLAGS="$CPPFLAGS -DSQLITE_ENABLE_FTS3=1 -DSQLITE_ENABLE_COLUMN_METADATA=1"
    export CPPFLAGS="$CPPFLAGS -DSQLITE_ENABLE_UNLOCK_NOTIFY=1 -DSQLITE_SECURE_DELETE=1"

    cd "$SOURCE_DIR/sqlite-autoconf-$_amalgamationver"
    autoreconf -fi
    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/sqlite-autoconf-$_amalgamationver"
    make DESTDIR="$INSTALL_DIR" install
}
