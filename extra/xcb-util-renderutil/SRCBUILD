# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util-renderutil.html

version=0.3.9
description="Utility libraries for XC Binding - Convenience functions for the Render extension"
depends=('xorg-libraries')
makedepends=('xorg-makeutils')
sources=("http://xcb.freedesktop.org/dist/xcb-util-renderutil-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/xcb-util-renderutil-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/xcb-util-renderutil-$version"
    make check
}

src_install() { 
    cd "$SOURCE_DIR/xcb-util-renderutil-$version"
    make DESTDIR="$INSTALL_DIR" install
}
