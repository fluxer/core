# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util-wm.html

version=0.4.1
description="Client and window-manager helpers for ICCCM and EWMH"
depends=('xorg-libraries')
makedepends=('xorg-makeutils')
sources=("http://xcb.freedesktop.org/dist/xcb-util-wm-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/xcb-util-wm-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/xcb-util-wm-$version"
    make check
}

src_install() { 
    cd "$SOURCE_DIR/xcb-util-wm-$version"
    make DESTDIR="$INSTALL_DIR" install
}
