# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/pinentry.html

version=1.1.0
description="a collection of simple PIN or passphrase entry dialogs which utilize the Assuan protocol"
depends=('ncurses' 'libcap')
optdepends=('qt5' 'gtk2')
sources=("ftp://ftp.gnupg.org/gcrypt/pinentry/pinentry-$version.tar.bz2"
        "ftp://ftp.gnupg.org/gcrypt/pinentry/pinentry-$version.tar.bz2.sig")
pgpkeys=('249B39D24F25E3B6')

src_compile() {
    cd "$SOURCE_DIR/pinentry-$version"

    sed 's|#include <ncursesw/|#include <|g' -i pinentry/pinentry-curses.c

    _options="--disable-pinentry-gtk2 --disable-pinentry-qt"
    [ "$OPTIONAL_GTK2" = "yes" ] && _options+=" --enable-pinentry-gtk2" 
    [ "$OPTIONAL_QT5" = "yes" ] && _options+=" --enable-pinentry-qt"
    ./configure --prefix=/usr \
        --enable-pinentry-curses \
        --enable-fallback-curses \
        $_options
    make
}

src_install() {
    cd "$SOURCE_DIR/pinentry-$version"
    make DESTDIR="$INSTALL_DIR" install
}
