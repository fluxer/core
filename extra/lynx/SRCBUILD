# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/basicnet/lynx.html

version=2.8.8
release=2
description="Text browser for the World Wide Web"
depends=('ncurses' 'openssl')
backup=('etc/lynx.cfg')
sources=("ftp://lynx.isc.org/lynx/tarballs/lynx${version}rel.2.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/lynx2-8-8"

    ./configure --prefix=/usr \
        --sysconfdir=/etc/lynx \
        --with-zlib \
        --with-bzlib \
        --with-screen=ncursesw \
        --enable-locale-charset
    make
}

src_install() {
    cd "$SOURCE_DIR/lynx2-8-8"
    make DESTDIR="$INSTALL_DIR" install
}
