# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=20100619
description="Quirks data for pm-utils"
sources=("http://pm-utils.freedesktop.org/releases/pm-quirks-$version.tar.gz")

src_install() {
    cd "$SOURCE_DIR"
    install -vdm755 "$INSTALL_DIR/usr/lib/pm-utils/video-quirks"
    install -vDm644 video-quirks/*.quirkdb "$INSTALL_DIR/usr/lib/pm-utils/video-quirks/"
}
