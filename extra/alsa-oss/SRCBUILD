# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/alsa-oss.html

version=1.1.9
description="OSS compatibility library"
depends=('alsa-lib')
sources=("ftp://ftp.alsa-project.org/pub/oss-lib/alsa-oss-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/alsa-oss-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/alsa-oss-$version"
    make DESTDIR="$INSTALL_DIR" install
}
