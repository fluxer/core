# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.6.4
description="Caching and sessions WSGI middleware for use with web applications and stand-alone Python scripts and applications"
depends=('python')
makedepends=('python-setuptools')
sources=("http://cheeseshop.python.org/packages/source/B/Beaker/Beaker-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/Beaker-$version"
    python setup.py build
}

src_install() {
    cd "$SOURCE_DIR/Beaker-$version"
    python setup.py install --prefix='/usr' --root="$INSTALL_DIR"
}
