version=41.5.1
description="Easily download, build, install, upgrade, and uninstall Python packages"
depends=('python')
sources=("https://github.com/pypa/setuptools/archive/v$version.tar.gz")
options=('!mirror')

src_compile() {
    cd "$SOURCE_DIR/setuptools-$version"
    python bootstrap.py
    python setup.py build
}

src_install() {
    cd "$SOURCE_DIR/setuptools-$version"
    python setup.py install --prefix='/usr' --root="$INSTALL_DIR"
}
