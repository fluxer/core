version=0.20.0
description='Video player based on MPlayer/mplayer2'
depends=('ffmpeg' 'lcms2' 'libdvdread' 'xorg-libraries'
         'mpg123' 'libdvdnav' 'hicolor-icon-theme' 'lua'
         'libass' 'libbluray')
makedepends=('mesalib')
options=('!mirror')
sources=("https://github.com/mpv-player/mpv/archive/v$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/mpv-$version"

    python ./bootstrap.py
    python ./waf configure --prefix=/usr \
        --confdir=/etc/mpv \
        --enable-libmpv-shared \
        --enable-lua
    python ./waf build
}

src_install() {
    cd "$SOURCE_DIR/mpv-$version"
    python ./waf install --destdir="$INSTALL_DIR"
}
