# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://linuxfromscratch.org/blfs/view/svn/general/libtiff.html

version=4.0.9
description="Widely used format for storing image data (TIFF)"
depends=('libjpeg-turbo' 'zlib' 'xz')
makedepends=('xorg-libraries')
sources=("http://download.osgeo.org/libtiff/tiff-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/tiff-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/tiff-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/tiff-$version"
    make DESTDIR="$INSTALL_DIR" install
}
