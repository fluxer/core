# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util-keysyms.html

version=0.3.9
description="Standard X constants and conversion to/from keycodes"
depends=('xorg-libraries')
makedepends=('xorg-makeutils')
sources=("http://xcb.freedesktop.org/dist/xcb-util-keysyms-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/xcb-util-keysyms-$version"

    ./configure --prefix=/usr \
       --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/xcb-util-keysyms-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/xcb-util-keysyms-$version"
    make DESTDIR="$INSTALL_DIR" install
}
