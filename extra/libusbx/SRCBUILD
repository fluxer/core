# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/libusb.html

version=1.0.20
depends=('musl' 'eudev')
description="Library that provides generic access to USB devices"
sources=("http://downloads.sf.net/libusb/libusb-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libusb-$version"

    ./configure --prefix=/usr \
        --disable-static
    make -j1
}

src_check() {
    cd "$SOURCE_DIR/libusb-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libusb-$version"
    make DESTDIR="$INSTALL_DIR" install
}
