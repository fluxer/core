# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=0.9.10
description="A cross-platform C libraries that allow you to easily implement VNC server"
depends=('libjpeg-turbo' 'gnutls' 'libgcrypt')
# sources=("https://github.com/LibVNC/libvncserver/archive/LibVNCServer-$version.tar.gz")
sources=("https://github.com/LibVNC/libvncserver.git")

src_compile() {
    # cd "$SOURCE_DIR/libvncserver-LibVNCServer-$version"
    cd "$SOURCE_DIR/libvncserver.git"

    ./autogen.sh
    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    # cd "$SOURCE_DIR/libvncserver-LibVNCServer-$version"
    cd "$SOURCE_DIR/libvncserver.git"
    make check
}

src_install() {
    # cd "$SOURCE_DIR/libvncserver-LibVNCServer-$version"
    cd "$SOURCE_DIR/libvncserver.git"
    make DESTDIR="$INSTALL_DIR" install
}
