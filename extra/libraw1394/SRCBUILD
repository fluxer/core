# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=2.1.2
description="Provides an API to the Linux IEEE1394 (FireWire) driver"
depends=('glibc')
sources=("https://www.kernel.org/pub/linux/libs/ieee1394/libraw1394-$version.tar.xz"
        "https://www.kernel.org/pub/linux/libs/ieee1394/libraw1394-$version.tar.sign")
pgpkeys=('955C0098E5C46EF9A152481479F36FB2545D79D0')

src_compile() {
    cd "$SOURCE_DIR/libraw1394-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libraw1394-$version"
    make DESTDIR="$INSTALL_DIR" install
}
