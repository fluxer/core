src_compile() {
    _packages=$(find "$SOURCE_DIR" -mindepth 1 -maxdepth 1 -type d)
    for _pkg in $_packages;do
        cd "$_pkg"

        case "$_pkg" in
	*luit*) patch -Np1 -i "$SOURCE_DIR/luit-fixes.patch"
                          autoreconf -fi ;;
                 *sessreg*) sed 's|$(CPP) $(DEFS)|$(CPP) -P $(DEFS)|' -i man/Makefile.in ;;
        esac

        echo "Configuring $_pkg..."
        ./configure --prefix=/usr \
                    --sysconfdir=/etc \
                    --localstatedir=/var \
                    --disable-static
        echo "Compiling $_pkg..."
        make

        # bootstrapping requires local installation
        if [ ! -d "/var/local/spm/xorg-applications" ];then
            echo "Installing $_pkg (local)..."
            make install
            ldconfig
        fi
    done
}

src_install() {
    _packages=$(find "$SOURCE_DIR" -mindepth 1 -maxdepth 1 -type d)
    for _pkg in $_packages;do
        cd "$_pkg"
        echo "Installing $_pkg (package)..."
        make DESTDIR="$INSTALL_DIR" install
    done

    # in case of bootstrapping
    if [ ! -d "/var/local/spm/xorg-applications" ];then
        find /usr/share/man/ -type f ! -name '*.gz' -delete
    fi
}

