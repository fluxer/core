# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/pango.html

version=1.36.8
description="Library for layout and rendering of text"
# TODO: 'libthai'
depends=('cairo' 'xorg-libraries' 'harfbuzz')
makedepends=('fontconfig' 'xorg-protocol-headers')
sources=("http://download.gnome.org/sources/pango/1.36/pango-$version.tar.xz"
        "http://download.gnome.org/sources/pangox-compat/0.0/pangox-compat-0.0.2.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/pango-$version"

    echo "Compiling pango..."
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --disable-gtk-doc-html
    make
    echo "Installing pango (local)..."
    make install

    echo "Updating libraries cache..."
    ldconfig

    echo "Compiling pangox-compat..."
    cd "$SOURCE_DIR/pangox-compat-0.0.2"
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/pango-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/pango-$version"
    make DESTDIR="$INSTALL_DIR" install

    cd "$SOURCE_DIR/pangox-compat-0.0.2"
    make DESTDIR="$INSTALL_DIR" install
    install -vdm755 "$INSTALL_DIR/etc/pango"
}


pre_remove() {
    rm -fv etc/pango/pango.modules
}
