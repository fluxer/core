# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/cvs/pst/xmlto.html

version=0.0.28
description="Convert xml to many other formats"
depends=('libxslt')
makedepends=('docbook-xsl')
sources=("https://releases.pagure.org/xmlto/xmlto-$version.tar.bz2")

src_prepare() {
    cd "$SOURCE_DIR/xmlto-$version"
    autoreconf -fi
}

src_compile() {
    cd "$SOURCE_DIR/xmlto-$version"

    ./configure --prefix=/usr \
        --mandir=/usr/share/man
    make
}

src_install() {
    cd "$SOURCE_DIR/xmlto-$version"
    make DESTDIR="$INSTALL_DIR" install
}
