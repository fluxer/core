# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/libogg.html

version=1.3.4
description="Ogg bitstream format to arrange the raw, compressed bitstream into a more robust, useful form"
depends=('glibc')
sources=("http://downloads.xiph.org/releases/ogg/libogg-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/libogg-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/libogg-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libogg-$version"
    make DESTDIR="$INSTALL_DIR" install
}
