version=1.3
description='A C library for parsing configuration files'
depends=('musl')
sources=("https://github.com/williamh/dotconf/tarball/v$version")

src_compile() {
    cd williamh-dotconf-4cd7b3a
    autoreconf -i
    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd williamh-dotconf-4cd7b3a
    make DESTDIR="$INSTALL_DIR" install
}
