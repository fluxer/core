# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=0.1.28
description="Thai language support routines"
depends=('libdatrie')
sources=("https://linux.thai.net/pub/thailinux/software/libthai/libthai-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/libthai-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libthai-$version"
    make DESTDIR="$INSTALL_DIR" install
}
