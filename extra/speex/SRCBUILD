# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/speex.html

version=1.2.0
description="A free codec for free speech"
depends=('libogg' 'speexdsp')
sources=("http://downloads.us.xiph.org/releases/speex/speex-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/speex-$version"

    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --enable-binaries # Must be given or configure won't use pkg-config correctly
    make
}

src_check() {
    cd "$SOURCE_DIR/speex-$version"
    make -k check
}

src_install() {
    cd "$SOURCE_DIR/speex-$version"
    make DESTDIR="$INSTALL_DIR" install
}
