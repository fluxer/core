# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/desktop-file-utils.html

version=0.26
description="Command line utilities for working with desktop entries"
depends=('glib')
sources=("http://www.freedesktop.org/software/desktop-file-utils/releases/desktop-file-utils-$version.tar.xz"
         "http://www.freedesktop.org/software/desktop-file-utils/releases/desktop-file-utils-$version.tar.xz.asc")
pgpkeys=('C01EDE5BB0D91E26D003662EC76BB9FEEAD12EA7')

src_prepare() {
    cd "$SOURCE_DIR/desktop-file-utils-$version"

    ./autogen.sh
}

src_compile() {
    cd "$SOURCE_DIR/desktop-file-utils-$version"

    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/desktop-file-utils-$version"
    make DESTDIR="$INSTALL_DIR" install
}
