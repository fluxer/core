# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/icu.html

version=58.2
description="International Components for Unicode library"
depends=('gcc' 'busybox')
sources=("http://download.icu-project.org/files/icu4c/$version/icu4c-58_2-src.tgz")

src_prepare() {
    cd "$SOURCE_DIR/icu/source"
    # disable symbols versioning
    sed -e 's|#define U_DISABLE_RENAMING 0|#define U_DISABLE_RENAMING 1|' \
        -i common/unicode/uconfig.h
}

src_compile() {
    cd "$SOURCE_DIR/icu/source"

    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --mandir=/usr/share/man \
        --disable-renaming \
        --disable-samples \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/icu/source"
    make check
}

src_install() {
    cd "$SOURCE_DIR/icu/source"
    make DESTDIR="$INSTALL_DIR" install
}
