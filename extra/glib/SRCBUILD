# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/glib2.html

version=2.64.6
description="Common C routines used by GTK+ and other libs"
depends=('pcre' 'libffi')
makedepends=('python' 'meson')
sources=("http://ftp.gnome.org/pub/GNOME/sources/glib/2.64/glib-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/glib-$version"

    meson ../build --buildtype plain \
        --prefix /usr \
        -Dgtk_doc=false
    ninja -C ../build
}

src_install() {
    cd "$SOURCE_DIR/glib-$version"
    DESTDIR="$INSTALL_DIR" ninja -C ../build install
}
