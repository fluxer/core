# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/glib2.html

version=2.58.3
description="Common C routines used by GTK+ and other libs"
depends=('pcre' 'libffi')
makedepends=('python')
sources=("http://ftp.gnome.org/pub/GNOME/sources/glib/2.58/glib-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/glib-$version"

    ./autogen.sh --prefix=/usr \
        --with-pcre=system \
        --disable-selinux \
        --disable-gtk-doc-html
    make
}

src_check() {
    cd "$SOURCE_DIR/glib-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/glib-$version"
    make DESTDIR="$INSTALL_DIR" install
}
