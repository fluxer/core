# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/postlfs/nettle.html

version=3.4.1
description="A low-level cryptographic library"
depends=('gmp')
sources=("http://ftp.gnu.org/gnu/nettle/nettle-$version.tar.gz"
        "http://ftp.gnu.org/gnu/nettle/nettle-$version.tar.gz.sig")
pgpkeys=('F3599FF828C67298')

src_compile() {
    cd "$SOURCE_DIR/nettle-$version"

    ./configure --prefix=/usr \
        --enable-shared \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/nettle-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/nettle-$version"
    make DESTDIR="$INSTALL_DIR" install
}
