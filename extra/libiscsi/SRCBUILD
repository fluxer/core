# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.19.0
depends=('glibc' 'popt')
description="Clientside library to implement the iSCSI protocol"
sources=("https://github.com/sahlberg/libiscsi/archive/$version.tar.gz")
options=('!mirror')

src_prepare() {
    cd "$SOURCE_DIR/libiscsi-$version"

    ./autogen.sh
}

src_compile() {
    cd "$SOURCE_DIR/libiscsi-$version"

    ./configure --prefix=/usr \
        --disable-static \
        --disable-werror \
        --libdir=/usr/lib 
    make
}

src_check() {
    cd "$SOURCE_DIR/libiscsi-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/libiscsi-$version"
    make DESTDIR="$INSTALL_DIR" install
}
