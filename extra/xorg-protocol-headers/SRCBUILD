src_compile() {
    _packages=$(find "$SOURCE_DIR" -mindepth 1 -maxdepth 1 -type d)
    for _pkg in $_packages;do
        cd "$_pkg"
        echo "Compiling $_pkg..."
        ./configure --prefix=/usr \
             --sysconfdir=/etc \
             --localstatedir=/var
        make
    done
}

src_install() {
    _packages=$(find "$SOURCE_DIR" -mindepth 1 -maxdepth 1 -type d)
    for _pkg in $_packages;do
        cd "$_pkg"
        echo "Installing $_pkg files..."
        make -j1 DESTDIR="$INSTALL_DIR" install
    done
}
