# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/unixodbc.html

version=2.3.2
description="ODBC is an open specification for providing application developers with a predictable API with which to access Data Sources"
depends=('readline' 'libtool')
sources=("http://www.unixodbc.org/unixODBC-$version.tar.gz")
backup=('etc/odbc.ini'
        'etc/odbcinst.ini')

src_compile() {
    cd "$SOURCE_DIR/unixODBC-$version"

    ./configure --prefix=/usr \
        --sysconfdir=/etc
    make
}

src_check() {
    cd "$SOURCE_DIR/unixODBC-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/unixODBC-$version"
    make DESTDIR="$INSTALL_DIR" install
}
