# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util.html

version=0.3.9
description="Core XCB utility functions"
depends=('xorg-libraries')
makedepends=('xorg-protocol-headers')
sources=("http://xorg.freedesktop.org/releases/individual/xcb/xcb-util-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/xcb-util-$version"

    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/xcb-util-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/xcb-util-$version"
    make DESTDIR="$INSTALL_DIR" install
}
