# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=6.0.1
description="Provides a simple foundation for reading DVD video disks"
depends=('musl')
makedepends=('libdvdcss')
sources=("ftp://ftp.videolan.org/pub/videolan/libdvdread/$version/libdvdread-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libdvdread-$version"

    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/libdvdread-$version"
    make DESTDIR="$INSTALL_DIR" install
}
