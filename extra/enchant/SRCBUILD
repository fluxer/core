# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/enchant.html

version=2.2.13
description="A wrapper library for generic spell checking"
depends=('dbus-glib' 'hunspell')
sources=("https://github.com/AbiWord/enchant/releases/download/v$version/enchant-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/enchant-$version"

    ./configure --prefix=/usr \
        --disable-static \
        --disable-ispell \
        --with-myspell-dir=/usr/share/myspell \
        --with-hunspell \
        --with-hunspell-dir=/usr/share/hunspell
    make
}

src_install() {
    cd "$SOURCE_DIR/enchant-$version"
    make DESTDIR="$INSTALL_DIR" install
}
