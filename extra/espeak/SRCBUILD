version=1.48.04
description='Text to Speech engine for English, with support for other languages'
# depends=('portaudio')
sources=("http://downloads.sf.net/espeak/espeak-$version-source.zip")

src_compile() {
    cd "espeak-$version-source/src"

    cp portaudio19.h portaudio.h
    make PREFIX=/usr \
        DATADIR=/usr/share/espeak-data \
        CXXFLAGS="$CXXFLAGS" \
        AUDIO= # runtime || portaudio
}

src_install() {
    cd "espeak-$version-source/src"
    make PREFIX=/usr \
        DATADIR=/usr/share/espeak-data \
        CXXFLAGS="$CXXFLAGS" \
        AUDIO= \
        DESTDIR="$INSTALL_DIR" install
}
