# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.1.3
description="Command line tools that assist applications with a variety of desktop integration tasks"
depends=('busybox' 'xorg-applications') # xset needed inside xdg-screensaver
makedepends=('docbook-xsl' 'lynx' 'xmlto')
sources=("http://portland.freedesktop.org/download/xdg-utils-$version.tar.gz")
pgpkeys=('C43570F80CC295E6')

src_compile() {
    cd "$SOURCE_DIR/xdg-utils-$version"
    ./configure --prefix=/usr \
        --mandir=/usr/share/man
    make
}

src_install() {
    cd "$SOURCE_DIR/xdg-utils-$version"

    make DESTDIR="$INSTALL_DIR" install

    # install empty directory to prevent xdg-desktop-menu
    # install *.desktop to fail, see FS#33316
    install -vdm755 "$INSTALL_DIR/usr/share/desktop-directories"
}
