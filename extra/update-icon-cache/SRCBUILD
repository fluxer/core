# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=2.24.28
description="Icon cache tool that does not depend on GTK+"
depends=('glib' 'gdk-pixbuf')
makedepends=('git')
sources=("https://github.com/fluxer/update-icon-cache.git")

src_compile() {
    cd "$SOURCE_DIR/update-icon-cache.git"
    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/update-icon-cache.git"
    make DESTDIR="$INSTALL_DIR" install
}
