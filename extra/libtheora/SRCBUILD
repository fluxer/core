# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/libtheora.html

version=1.1.1
description="Video codec, intended for use within the Foundation Ogg multimedia streaming system"
depends=('libogg')
makedepends=('libvorbis')
sources=("http://downloads.xiph.org/releases/theora/libtheora-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libtheora-$version"

    # fix build with libpng >=1.6
    sed -i 's/png_\(sizeof\)/\1/g' examples/png2theora.c

    ./configure --prefix=/usr \
        --enable-shared \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libtheora-$version"
    make DESTDIR="$INSTALL_DIR" install
}
