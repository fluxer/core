# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/strigi.html

version=20160330
description="Fast crawling desktop search engine with Qt GUI"
depends=('dbus' 'libxml2' 'bzip2' 'exiv2' 'ffmpeg')
makedepends=('cmake' 'git')
sources=("http://github.com/fluxer/strigi.git")

src_compile() {
    mkdir -p "$SOURCE_DIR/build"
    cd "$SOURCE_DIR/build"

    cmake ../strigi.git \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DENABLE_INOTIFY=ON \
        -DENABLE_FFMPEG=ON \
        -DENABLE_LOG4CXX=OFF \
        -DENABLE_FAM=OFF \
        -DENABLE_CLUCENE=OFF \
        -DENABLE_CLUCENE_NG=OFF \
        -DENABLE_QT4=OFF
    make
}

src_check() {
    cd "$SOURCE_DIR/build"
    make test
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
