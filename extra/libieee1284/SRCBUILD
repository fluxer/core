version=0.2.11
description="A library to query devices connected in parallel port"
depends=('python')
sources=("http://downloads.sf.net/libieee1284/libieee1284-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libieee1284-$version"

    # Python.h not found otherwise
    export CFLAGS="$CFLAGS $(pkg-config --cflags python)"

    ./configure --prefix=/usr \
        --mandir=/usr/share/man \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libieee1284-$version"
    make DESTDIR="$INSTALL_DIR" install
}
