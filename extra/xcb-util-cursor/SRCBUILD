# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=0.1.3
description='XCB cursor library'
depends=('xorg-libraries' 'xcb-util-renderutil' 'xcb-util-image')
sources=("http://xcb.freedesktop.org/dist/xcb-util-cursor-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/xcb-util-cursor-$version"

    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/xcb-util-cursor-$version"
    make DESTDIR="$INSTALL_DIR" install
}
