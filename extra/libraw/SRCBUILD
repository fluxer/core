# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/cvs/general/libraw.html

version=0.18.2
description="A library for reading RAW files obtained from digital photo cameras (CRW/CR2, NEF, RAF, DNG, and others)"
depends=('lcms2' 'jasper')
sources=("http://www.libraw.org/data/LibRaw-$version.tar.gz")

src_compile() {
    cd "$SOURCE_DIR/LibRaw-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/LibRaw-$version"
    make DESTDIR="$INSTALL_DIR" install
}
