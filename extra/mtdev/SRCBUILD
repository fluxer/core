# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/mtdev.html

version=1.1.5
description="Stand-alone library which transforms all variants of kernel MT events to the slotted type B protocol"
depends=('musl')
sources=("http://bitmath.org/code/mtdev/mtdev-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/mtdev-$version"

    ./configure --prefix=/usr \
                --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/mtdev-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/mtdev-$version"
    make DESTDIR="$INSTALL_DIR" install
}
