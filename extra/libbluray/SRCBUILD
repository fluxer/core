# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.1.1
description='Library to access Blu-Ray disks for video playback'
depends=('libxml2' 'freetype2')
sources=("ftp://ftp.videolan.org/pub/videolan/libbluray/$version/libbluray-$version.tar.bz2")

src_compile() {
    cd "$SOURCE_DIR/libbluray-$version"

    ./configure --prefix=/usr \
        --disable-static \
        --disable-bdjava-jar \
        --disable-doxygen-doc \
        --disable-examples
    make
}

src_install() {
    cd "$SOURCE_DIR/libbluray-$version"
    make DESTDIR="$INSTALL_DIR" install
}
