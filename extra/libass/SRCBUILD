# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/multimedia/libass.html

version=0.13.6
description="Portable subtitle renderer for the ASS/SSA subtitle format"
depends=('fontconfig' 'fribidi' 'harfbuzz')
sources=("https://github.com/libass/libass/releases/download/$version/libass-$version.tar.xz")

src_compile() {
    cd "$SOURCE_DIR/libass-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_install() {
    cd "$SOURCE_DIR/libass-$version"
    make DESTDIR="$INSTALL_DIR" install
}
