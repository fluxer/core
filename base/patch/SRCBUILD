# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/lfs/view/development/chapter06/patch.html

version=2.7.6
description='A utility to apply patch files to original sources'
depends=('musl')
sources=("http://ftp.gnu.org/gnu/libtool/patch-$version.tar.xz"
        "http://ftp.gnu.org/gnu/libtool/patch-$version.tar.xz.sig")
pgpkeys=('C4C927CD5D1B36D7')

src_compile() {
    cd "$SOURCE_DIR/patch-$version"

    ./configure --prefix=/usr
    make
}

src_check() {
    cd "$SOURCE_DIR/patch-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/patch-$version"
    make DESTDIR="$INSTALL_DIR" install
}
