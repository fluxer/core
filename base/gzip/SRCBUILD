# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.9
description='GNU compression utility'
depends=('glibc' 'bash' 'less')
sources=("ftp://ftp.gnu.org/pub/gnu/gzip/gzip-$version.tar.xz"
        "ftp://ftp.gnu.org/pub/gnu/gzip/gzip-$version.tar.xz.sig")
pgpkeys=('7FD9FCCB000BEEEE')

src_compile() {
    cd "$SOURCE_DIR/gzip-$version"

    ./configure --prefix=/usr
    make
}

src_check() {
    cd "$SOURCE_DIR/gzip-$version"
    make check
}

src_install() {
    cd "$SOURCE_DIR/gzip-$version"
    make prefix="$INSTALL_DIR/usr" install
}

