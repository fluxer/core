version=4.3.48
_version=4.3.30
description="sh-compatible shell that incorporates useful features from the Korn shell (ksh) and C shell (csh)"
depends=('glibc' 'ncurses' 'readline')
sources=("http://ftp.gnu.org/gnu/bash/bash-$_version.tar.gz"
