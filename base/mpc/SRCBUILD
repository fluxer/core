# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/lfs/view/development/chapter06/mpc.html

version=1.0.3
description="C library for the arithmetic of complex numbers with arbitrarily high precision and correct rounding of the result"
depends=('glibc' 'mpfr')
sources=("http://www.multiprecision.org/mpc/download/mpc-$version.tar.gz"
        "http://www.multiprecision.org/mpc/download/mpc-$version.tar.gz.sig")
pgpkeys=('AD17A21EF8AED8F1CC02DBD9F7D5C9BF765C61E3')

src_compile() {
    cd "$SOURCE_DIR/mpc-$version"

    ./configure --prefix=/usr \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/mpc-$version"
    make check
}

src_install(){
    cd "$SOURCE_DIR/mpc-$version"
    make DESTDIR="$INSTALL_DIR" install 
}
