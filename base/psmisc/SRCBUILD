# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=22.21
description="Miscellaneous procfs tools"
depends=('ncurses')
sources=("http://downloads.sf.net/psmisc/psmisc-$version.tar.gz"
        'psmisc-fuser.patch')

src_prepare() {
    cd "$SOURCE_DIR/psmisc-$version"
    patch -p1 -i "$SOURCE_DIR/psmisc-fuser.patch"
}

src_compile() {
    cd "$SOURCE_DIR/psmisc-$version"

    ./configure --prefix=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/psmisc-$version"
    make DESTDIR="$INSTALL_DIR" install
}
