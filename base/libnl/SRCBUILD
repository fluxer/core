# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/basicnet/libnl.html

version=3.5.0
description="Collection of libraries providing APIs to netlink protocol based Linux kernel interfaces"
depends=('glibc')
backup=('etc/libnl/classid' 'etc/libnl/pktloc')
sources=("https://github.com/thom311/libnl/releases/download/libnl3_5_0/libnl-$version.tar.gz"
        "https://github.com/thom311/libnl/releases/download/libnl3_5_0/libnl-$version.tar.gz.sig")
pgpkeys=('29C2366E4DFC5728')

src_compile() {
    cd "$SOURCE_DIR/libnl-$version"

    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --disable-static
    make
}

src_check() {
    cd "$SOURCE_DIR/libnl-$version"
    make check 
}

src_install() {
    cd "$SOURCE_DIR/libnl-$version"
    make DESTDIR="$INSTALL_DIR" install
}
