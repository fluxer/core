# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/kde/oxygen-icons.html

version=4.18.0
description="The Ariya Icon Theme"
makedepends=('cmake')
sources=("https://github.com/fluxer/ariya-icons.git")

src_compile() {
    mkdir -v "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    cmake ../ariya-icons.git \
        -DCMAKE_BUILD_TYPE=Release \
        -DENABLE_TESTING=OFF \
        -DCMAKE_INSTALL_PREFIX=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
