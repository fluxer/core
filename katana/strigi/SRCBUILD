# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/strigi.html

version=20200130
description="Fast crawling desktop search engine"
depends=('dbus' 'libxml2' 'bzip2' 'exiv2' 'ffmpeg' 'file')
makedepends=('cmake' 'git')
sources=("https://github.com/fluxer/strigi.git")

src_compile() {
    mkdir -p "$SOURCE_DIR/build"
    cd "$SOURCE_DIR/build"

    cmake ../strigi.git \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DENABLE_FFMPEG=ON
    make
}

src_check() {
    cd "$SOURCE_DIR/build"
    make test
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
