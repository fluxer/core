# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=0.9.2
description="Library that provides a Katie implementation of the DBusMenu spec"
depends=('katie')
makedepends=('git' 'cmake')
sources=("https://github.com/fluxer/libdbusmenu-qt.git")

src_compile() {
    cd "$SOURCE_DIR/libdbusmenu-qt.git"

    cmake -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DWITH_DOC=OFF
    make
}

src_install() {
    cd "$SOURCE_DIR/libdbusmenu-qt.git"
    make DESTDIR="$INSTALL_DIR" install
}