# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/general/poppler.html

version=20200205
description="PDF rendering library based on xpdf 3.0"
depends=('libjpeg-turbo' 'openjpeg' 'fontconfig' 'katie')
makedepends=('git' 'cmake')
sources=("https://github.com/fluxer/poppler.git")

src_compile() {
    mkdir build && cd build

    cmake ../poppler.git \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_QT4_TESTS=FALSE \
        -DBUILD_CPP_TESTS=FALSE
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}