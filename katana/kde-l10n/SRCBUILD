# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=4.18.0
description='KDE localizations'
makedepends=('cmake' 'kdelibs')
sources=("https://github.com/fluxer/kde-l10n.git")
src_compile() {
    mkdir -p "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    cmake "$SOURCE_DIR/kde-l10n.git" \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DCMAKE_INSTALL_PREFIX=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
