# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# http://www.linuxfromscratch.org/blfs/view/svn/kde/qimageblitz.html

version=0.0.6
description="A graphical effect and filter library for KDE"
depends=('katie')
makedepends=('cmake' 'git')
sources=("https://github.com/fluxer/qimageblitz.git")

src_compile() {
    mkdir "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    cmake ../qimageblitz.git \
      -DCMAKE_BUILD_TYPE=RelWithDebInfo \
      -DCMAKE_INSTALL_PREFIX=/usr
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
