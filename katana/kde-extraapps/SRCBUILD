# http://www.linuxfromscratch.org/blfs/view/svn/kde/add.html

version=4.18.0
description="KDE extra applications"
depends=('kdelibs' 'kde-workspace' 'gnupg' 'ffmpeg' 'poppler' 'libgcrypt'
    'ebook-tools' 'libspectre' 'lcms2' 'parted' 'unrar' 'hunspell'
    'qimageblitz' 'libkipi' 'djvulibre' 'bluez' 'libvncserver' 'sane' 'qca'
    'qjson' 'taglib' 'flac' 'gpgme' 'grantlee' 'gdb')
makedepends=('cmake')
optdepends=('pulseaudio' 'libcanberra' 'subversion' 'cvs' 'speech-dispatcher')
sources=("https://github.com/fluxer/kde-extraapps.git")

src_compile() {
    mkdir -p "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"

    _options="-DBUILD_jovie=FALSE"
    [ "$OPTIONAL_SPEECH_DISPATCHER" = "yes" ] && _options+=" -DBUILD_jovie=TRUE"
    cmake ../kde-extraapps.git \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DCMAKE_SKIP_INSTALL_RPATH=ON \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DKDE4_BUILD_TESTS=OFF \
        $_options
    make
}

src_check() {
    cd "$SOURCE_DIR/build"
    make test
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}

