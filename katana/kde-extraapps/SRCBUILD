# http://www.linuxfromscratch.org/blfs/view/svn/kde/add.html

version=4.19.0
description="KDE extra applications"
depends=('kdelibs' 'kde-workspace' 'ffmpeg' 'poppler' 'libgcrypt'
    'ebook-tools' 'libspectre' 'lcms2' 'parted' 'unrar'
    'djvulibre' 'bluez' 'qca' 'taglib' 'flac')
makedepends=('cmake')
optdepends=('pulseaudio' 'libcanberra' 'subversion' 'cvs'
    'speech-dispatcher' 'sane' 'gpgme' 'libvncserver' 'cups' 'boost')
sources=("https://github.com/fluxer/kde-extraapps.git")

src_compile() {
    mkdir -p "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"

    _options="-DBUILD_kuassel=FALSE -DBUILD_jovie=FALSE -DBUILD_libksane=FALSE -DBUILD_skanlite=FALSE"
    _options+=" -DBUILD_kgpg=FALSE -DBUILD_krfb=FALSE -DBUILD_print-manager=FALSE"
    _options+=" -DBUILD_libktorrent=FALSE -DBUILD_kget=FALSE -DBUILD_akregator=FALSE -DBUILD_syndication=FALSE" # boost copy is not usefull
    [ "$OPTIONAL_SPEECH_DISPATCHER" = "yes" ] && _options+=" -DBUILD_jovie=TRUE"
    [ "$OPTIONAL_SANE" = "yes" ] && _options+=" -DBUILD_libksane=TRUE -DBUILD_skanlite=TRUE"
    [ "$OPTIONAL_GPGME" = "yes" ] && _options+=" -DBUILD_kgpg=TRUE"
    [ "$OPTIONAL_LIBVNCSERVER" = "yes" ] && _options+=" -DBUILD_krfb=TRUE"
    [ "$OPTIONAL_CUPS" = "yes" ] && _options+=" -DBUILD_print-manager=TRUE"
    [ "$OPTIONAL_BOOST" = "yes" ] && _options+=" -DBUILD_libktorrent=TRUE -DBUILD_kget=TRUE -DBUILD_akregator=TRUE -DBUILD_syndication=TRUE"
    cmake ../kde-extraapps.git \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_SKIP_INSTALL_RPATH=ON \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DENABLE_TESTING=OFF \
        $_options
    make
}

src_check() {
    cd "$SOURCE_DIR/build"
    make test
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}

