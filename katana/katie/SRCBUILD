# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=20201125
description='C++ toolkit derived from the Qt 4.8 framework'
depends=('libtiff' 'libpng' 'libjpeg-turbo' 'sqlite' 'ca-certificates' 'dbus'
         'fontconfig' 'xorg-libraries' 'hicolor-icon-theme' 'icu' 'pcre' 'zstd')
makedepends=('xorg-protocol-headers' 'cmake')
optdepends=('mariadb' 'unixodbc' 'postgresql' 'cups')
sources=("https://github.com/fluxer/katie.git")

src_compile() {
    mkdir -p build && cd build

    cmake ../katie.git \
         -Wno-dev \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DKATIE_LDCONF_PATH=/etc/ld.so.conf.d \
        -DKATIE_PROFILE_PATH=/etc/profile.d \
        -DWITH_MYSQL=$OPTIONAL_MARIADB_BOOL \
        -DWITH_ODBC=$OPTIONAL_UNIXODBC_BOOL \
        -DWITH_POSTGRESQL=$OPTIONAL_POSTGRESQL_BOOL \
        -DWITH_CUPS=$OPTIONAL_CUPS_BOOL \
        -DKATIE_PCH=ON \
        -DCMAKE_UNITY_BUILD=OFF
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}

